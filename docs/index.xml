      &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
      &lt;tr&gt;
          &lt;td&gt;IMEM&lt;/td&gt;
          &lt;td&gt;Instruction Memory&lt;/td&gt;
          &lt;td&gt;Instruction codes&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;DMEM&lt;/td&gt;
